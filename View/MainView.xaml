<Window x:Class="Gestión_Hotelera.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestión_Hotelera.View"
        xmlns:view="clr-namespace:Gestión_Hotelera.View"
        xmlns:viewModel="clr-namespace:Gestión_Hotelera.ViewModel"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="MainView" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
            <local:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ClientesViewModel}">
            <local:ClientView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:HotelesViewModel}">
            <local:HotelsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RegistroHotelViewModel}">
            <local:RegistroHotelView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:HabitacionesViewModel}">
            <local:HabitacionesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RegistroHabitacionViewModel}">
            <local:RegistroHabitacionView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RegistroClienteViewModel}">
            <local:RegistroClienteView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ReservasViewModel}">
            <local:ReservasView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:NuevaReservaViewModel}">
            <local:NuevaReservaView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:CheckInViewModel}">
            <local:CheckInView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RealizarCheckInViewModel}">
            <local:RealizarCheckInView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:CheckOutViewModel}">
            <local:CheckOutView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RealizarCheckOutViewModel}">
            <local:RealizarCheckOut/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:HabitacionesListaViewModel}">
            <local:HabitacionesListaView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:TipoHabitacionViewModel}">
            <local:TipoHabitacionView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ReservaDetalleViewModel}">
            <local:ReservaDetalleView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:FacturaDetalleViewModel}">
            <local:FacturaDetalleView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ReportesViewModel}">
            <local:ReportesView/>
        </DataTemplate>

    </Window.Resources>

    <Border CornerRadius="10"
                BorderThickness="1">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navitation Menu-->
                <ColumnDefinition Width="250"/>
                <!--Content section-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Navigation Menu-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    
                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">
                        <Image Source="/Resources/logo-minimal.png" Height="30"/>
                        <TextBlock Text="Kuma Hotel"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Verdana"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <!--Menu Buttons-->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color1}"
                                 Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Inicio" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color2}"
                                 Command="{Binding ShowHotelsViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Building" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Hoteles" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color3}"
                                 Command="{Binding ShowHabitacionesViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Bed" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Habitaciones" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color4}"
                                 Command="{Binding ShowClientViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="User" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Clientes" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color5}"
                                 Command="{Binding ShowReservasViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Calendar" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Reservaciones" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color6}"
                                 Command="{Binding ShowCheckInCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Check" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Check In" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color7}"
                                 Command="{Binding ShowCheckOutcommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="CheckDouble" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Check Out" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color8}"
                                 Command="{Binding ShowReportesCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="SquarePollVertical" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Reportes" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <!--
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color9}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Gear" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Settings" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    -->

                </StackPanel>

            </Border>
            
            <!--Main Section-->

            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control Bar-->
                        <RowDefinition Height="25"/>
                        <!--Header / Caption-->
                        <RowDefinition Height="35"/>
                        <!--Content section / Childs views-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                        <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color9}"
                                Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                        <Button x:Name="btnMaximize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color6}"
                                Click="btnMaximize_Click">
                            <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                        <Button x:Name="btnMinimize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                    </StackPanel>

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!--Caption-->
                        <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">

                            <fa:IconImage Icon="{Binding Icon}"
                                      Height="20"
                                      Width="20"
                                      Foreground="{StaticResource titleColor2}"
                                      Margin="35,0,10,0"/>
                            <TextBlock Text="{Binding Caption}"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="16"
                                   FontFamily="Verdana"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                        <!--User-->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                            <!-- Perfil a la derecha -->
                            <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center" 
                                Grid.Row="0">
                                <TextBlock Text="{Binding UserEmail}" 
                                   FontSize="14" 
                                   VerticalAlignment="Center" 
                                   Foreground="{StaticResource plainTextColor1}"/>
                                <Border Background="{StaticResource panelOverColor}" 
                                    CornerRadius="20" 
                                    Width="32" 
                                    Height="32" 
                                    Margin="12,0,0,0">
                                    <TextBlock Text="{Binding UserInitials}" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center"
                                                FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <ContentControl Content="{Binding CurrentChildView}"
                                    Grid.Row="2"
                                    Margin="15"/>
                </Grid>

            </Border>

        </Grid>
        
    </Border>

</Window>
