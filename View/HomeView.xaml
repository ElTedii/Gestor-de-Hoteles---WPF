<UserControl x:Class="Gestión_Hotelera.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             xmlns:viewModel="clr-namespace:Gestión_Hotelera.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Grid.Row="1"
                Background="{StaticResource panelColor}"
                CornerRadius="10" 
                Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Grid.Row="0">
                <TextBlock Text="Dashboard"
                           Background="Transparent"
                           Foreground="{StaticResource plainTextColor1}"
                           Padding="15"
                           FontFamily="Verdana"
                           FontSize="15"
                           VerticalAlignment="Top"/>

                <TextBlock Text="{Binding CurrentDate, StringFormat='  {0:dd/MM/yyyy}'}"
                           FontSize="15" 
                           Margin="20,0,0,0"
                           FontFamily="Verdana"
                           VerticalAlignment="Top"
                           Padding="15"
                        Foreground="{StaticResource plainTextColor2}"/>
            </StackPanel>

            <!-- Tarjetas -->
            <WrapPanel Grid.Row="1" Margin="0,20,0,25">

                <!-- Tarjetas -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                    <ItemsControl ItemsSource="{Binding Cards}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <!-- TARJETA -->
                                <Border Style="{StaticResource KumaDashboardCard}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- TEXTO -->
                                        <StackPanel>
                                            <TextBlock Text="{Binding Titulo}" Style="{StaticResource KumaCardTitle}"/>
                                            <TextBlock Text="{Binding Valor}" Style="{StaticResource KumaCardValue}" Margin="0,5,0,0"/>
                                        </StackPanel>

                                        <!-- ICONO -->
                                        <fa:IconBlock Grid.Column="1"
                                               Icon="{Binding Icono}"
                                               Foreground="{Binding Color}"
                                               FontSize="32"
                                               Height="32"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </WrapPanel>


            <!-- Reservas Recientes -->
            <Border Grid.Row="2" 
                    Background="{StaticResource panelColor}" 
                    Padding="20" 
                    CornerRadius="8" 
                    BorderBrush="{StaticResource panelOverColor}" 
                    BorderThickness="1">
                <StackPanel>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Stretch">
                        <TextBlock Text="Reservas" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource plainTextColor1}"/>
                        <Button Content="Ver todas"
                            HorizontalAlignment="Right"
                            Command="{Binding SeeAllReservationsCommand}"
                            Background="Transparent"
                            Foreground="{StaticResource panelActiveColor}"
                            BorderThickness="0"
                            Padding="5"
                            FontWeight="Bold"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding LastReservations}"
                            Style="{StaticResource KumaDataGrid}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Código" Binding="{Binding ReservaId}" Width="160"/>
                            <DataGridTextColumn Header="Cliente" Binding="{Binding ClienteNombre}" Width="200"/>
                            <DataGridTextColumn Header="Hotel" Binding="{Binding HotelNombre}" Width="200"/>
                            <DataGridTextColumn Header="Check In" Binding="{Binding FechaEntrada, StringFormat=dd/MM/yyyy}" Width="150"/>
                            <DataGridTextColumn Header="Check Out" Binding="{Binding FechaSalida, StringFormat=dd/MM/yyyy}" Width="150"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding PrecioTotal, StringFormat=C}" Width="100"/>
                        </DataGrid.Columns>

                    </DataGrid>

                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
