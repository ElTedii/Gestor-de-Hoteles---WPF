<UserControl x:Class="Gestión_Hotelera.View.RealizarCheckOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="{StaticResource panelColor}"
                Padding="25"
                CornerRadius="10">

            <StackPanel Orientation="Vertical" Margin="10">

                <!-- Título -->
                <TextBlock Text="Check-Out"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource titleColor2}"
                           Margin="0,0,0,25"/>

                <!-- HOTEL -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Hotel"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource plainTextColor2}"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Hoteles}"
                              DisplayMemberPath="Nombre"
                              SelectedValuePath="HotelId"
                              SelectedValue="{Binding HotelSeleccionado}"
                              Style="{StaticResource DarkComboBoxStyle}"
                              Width="300"/>
                </Grid>

                <!-- HABITACIÓN -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Habitación"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource plainTextColor2}"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Habitaciones}"
                              SelectedItem="{Binding HabitacionSeleccionada}"
                              Style="{StaticResource DarkComboBoxStyle}"
                              Width="200"/>
                </Grid>

                <!-- INFO ESTANCIA -->
                <Border Background="{StaticResource panelOverColor}"
                        Padding="15"
                        CornerRadius="8"
                        Margin="0,0,0,20">

                    <StackPanel Margin="5">

                        <TextBlock Text="Información de la estancia"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource plainTextColor1}"
                                   Margin="0,0,0,15"/>

                        <StackPanel Margin="10">

                            <TextBlock Text="Cliente:"
                                       Foreground="{StaticResource plainTextColor2}"/>
                            <TextBlock Text="{Binding ClienteNombre}"
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Entrada:"
                                       Foreground="{StaticResource plainTextColor2}"/>
                            <TextBlock Text="{Binding Estancia.FechaEntrada}"
                                       Foreground="White"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Salida:"
                                       Foreground="{StaticResource plainTextColor2}"/>
                            <TextBlock Text="{Binding Estancia.FechaSalida}"
                                       Foreground="White"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Anticipo:"
                                       Foreground="{StaticResource plainTextColor2}"/>
                            <TextBlock Text="{Binding Estancia.Anticipo}"
                                       Foreground="White"
                                       Margin="0,0,0,10"/>

                        </StackPanel>

                    </StackPanel>

                </Border>

                <!-- MONTO -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Monto servicios ($)"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource plainTextColor2}"/>

                    <TextBox Grid.Column="1"
                             Style="{StaticResource DarkInputStyle}"
                             Text="{Binding MontoServicios}"/>
                </Grid>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Descuento ($)"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource plainTextColor2}"/>

                    <TextBox Grid.Column="1"
                             Style="{StaticResource DarkInputStyle}"
                             Text="{Binding Descuento}"/>
                </Grid>

                <!-- TOTAL -->
                <Border Background="{StaticResource panelOverColor}"
                        Padding="15"
                        CornerRadius="8">
                    <StackPanel Orientation="Horizontal">

                        <TextBlock Text="TOTAL:"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource plainTextColor1}"
                                   Margin="0,0,15,0"/>

                        <TextBlock Text="{Binding TotalCalculado}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource panelActiveColor}"/>
                    </StackPanel>
                </Border>

                <!-- BOTÓN -->
                <Button Content="Realizar Check-Out"
                        Margin="0,20,0,0"
                        Width="220"
                        Height="45"
                        HorizontalAlignment="Right"
                        Command="{Binding EjecutarCheckOutCommand}"
                        Style="{StaticResource KumaButton}"/>
            </StackPanel>
        </Border>
    </ScrollViewer>

</UserControl>