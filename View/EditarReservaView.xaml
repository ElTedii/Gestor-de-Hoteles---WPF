<UserControl x:Class="Gestión_Hotelera.View.EditarReservaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Border Background="#162447"
                Padding="30"
                CornerRadius="12"
                BorderBrush="#25324A"
                BorderThickness="1">

            <StackPanel Orientation="Vertical">

                <TextBlock Text="Editar Reservación"
                           FontSize="24"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,0,25"/>

                <!-- Cliente -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Cliente"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Text="{Binding Reserva.ClienteNombre}"
                             Style="{StaticResource DarkInputStyle}"
                             Width="300"/>
                </Grid>

                <!-- Hotel -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Hotel"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Text="{Binding Reserva.HotelNombre}"
                             Style="{StaticResource DarkInputStyle}"
                             Width="300"/>
                </Grid>

                <!-- Entradas y Salidas -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Entrada" Foreground="#C9D1E0" VerticalAlignment="Center"/>
                    <DatePicker Grid.Column="1"
                                SelectedDate="{Binding Reserva.FechaEntrada}"
                                />

                    <TextBlock Grid.Column="2" Text="Salida" Foreground="#C9D1E0" VerticalAlignment="Center"/>
                    <DatePicker Grid.Column="3"
                                SelectedDate="{Binding Reserva.FechaSalida}"
                                />
                </Grid>

                <!-- Personas -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Personas"
                               Foreground="#C9D1E0" VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Text="{Binding Reserva.NumPersonas}"
                             Width="120"
                             Style="{StaticResource DarkInputStyle}"/>
                </Grid>

                <!-- Precio -->
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Precio Total"
                               Foreground="#C9D1E0" VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Text="{Binding Reserva.PrecioTotal}"
                             Width="160"
                             Style="{StaticResource DarkInputStyle}"/>
                </Grid>

                <Button Content="Guardar Cambios"
                        Width="220"
                        Height="45"
                        HorizontalAlignment="Right"
                        Command="{Binding GuardarCambiosCommand}"
                        Style="{StaticResource KumaButton}"/>

            </StackPanel>

        </Border>

    </ScrollViewer>
</UserControl>
