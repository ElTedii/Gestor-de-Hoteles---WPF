<UserControl x:Class="Gestión_Hotelera.View.ReservaDetalleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="#162447"
                Padding="30"
                CornerRadius="12"
                BorderBrush="#25324A"
                BorderThickness="1">

            <StackPanel>

                <TextBlock Text="Detalle de Reservación"
                           FontSize="26"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0 0 0 25"/>

                <!-- Código y estado -->
                <Border Background="#1F2A40" Padding="15" CornerRadius="8" Margin="0 0 0 20">
                    <StackPanel>
                        <TextBlock Text="{Binding CodigoReserva}"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Estado}"
                                   Foreground="#C9D1E0"
                                   FontSize="16"/>
                    </StackPanel>
                </Border>

                <!-- Cliente -->
                <TextBlock Text="Cliente" Foreground="#C9D1E0" FontSize="18" FontWeight="Bold"/>
                <StackPanel Margin="0 5 0 20">
                    <TextBlock Text="{Binding ClienteNombre}" Foreground="White" FontSize="16"/>
                    <TextBlock Text="{Binding ClienteCorreo}" Foreground="#C9D1E0"/>
                    <TextBlock Text="{Binding ClienteTelefono}" Foreground="#C9D1E0"/>
                </StackPanel>

                <!-- Hotel -->
                <TextBlock Text="Hotel" Foreground="#C9D1E0" FontSize="18" FontWeight="Bold"/>
                <StackPanel Margin="0 5 0 20">
                    <TextBlock Text="{Binding HotelNombre}" Foreground="White" FontSize="16"/>
                    <TextBlock Text="{Binding HabitacionTexto}" Foreground="#C9D1E0"/>
                </StackPanel>

                <!-- Fechas -->
                <TextBlock Text="Fechas" Foreground="#C9D1E0" FontSize="18" FontWeight="Bold"/>
                <StackPanel Margin="0 5 0 20">
                    <TextBlock Text="{Binding FechaEntradaTexto}" Foreground="White"/>
                    <TextBlock Text="{Binding FechaSalidaTexto}" Foreground="White"/>
                    <TextBlock Text="{Binding DiasTexto}" Foreground="#C9D1E0"/>
                </StackPanel>

                <!-- Personas -->
                <TextBlock Text="Ocupación" Foreground="#C9D1E0" FontSize="18" FontWeight="Bold"/>
                <StackPanel Margin="0 5 0 20">
                    <TextBlock Text="{Binding PersonasTexto}" Foreground="White"/>
                </StackPanel>

                <!-- Precio -->
                <TextBlock Text="Precio" Foreground="#C9D1E0" FontSize="18" FontWeight="Bold"/>
                <StackPanel Margin="0 5 0 20">
                    <TextBlock Text="{Binding PrecioTotalTexto}" Foreground="#85D96B" FontSize="18"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Anticipo: " Foreground="#C9D1E0" Margin="0,0,5,0"/>
                        <TextBox Width="120"
                                 Text="{Binding Anticipo, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource DarkInputStyle}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding SaldoTexto}" Foreground="#C9D1E0" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Guardar cambios"
                            Command="{Binding GuardarCambiosCommand}"
                            Style="{StaticResource KumaButton}"
                            Width="160"
                            Height="40"/>

                    <Button Content="Volver"
                            Command="{Binding VolverCommand}"
                            Style="{StaticResource KumaButton}"
                            Width="120"
                            Height="40"
                            Margin="10,0,0,0"/>
                </StackPanel>

            </StackPanel>

        </Border>
    </ScrollViewer>

</UserControl>