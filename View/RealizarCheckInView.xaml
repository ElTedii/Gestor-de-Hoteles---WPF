<UserControl x:Class="Gestión_Hotelera.View.RealizarCheckInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="{StaticResource panelColor}"
            Padding="25"
            CornerRadius="12">

            <StackPanel Orientation="Vertical" Margin="10">

                <TextBlock Text="Realizar Check-In"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="{StaticResource titleColor2}"
                       Margin="0 0 0 20"/>

                <!-- Cliente -->
                <TextBlock Text="Cliente" Foreground="{StaticResource plainTextColor2}" />
                <TextBlock Text="{Binding Modelo.ClienteNombre}"
                       FontSize="16" Foreground="White" Margin="0 0 0 10"/>

                <!-- Hotel -->
                <TextBlock Text="Hotel" Foreground="{StaticResource plainTextColor2}" />
                <TextBlock Text="{Binding Modelo.HotelNombre}"
                       FontSize="16" Foreground="White" Margin="0 0 0 10"/>

                <!-- Habitaciones -->
                <TextBlock Text="Habitación disponible" Foreground="{StaticResource plainTextColor2}" />

                <ComboBox ItemsSource="{Binding Habitaciones}"
                      SelectedItem="{Binding HabitacionSeleccionada}"
                      DisplayMemberPath="Numero"
                      Style="{StaticResource DarkComboBoxStyle}"
                      Margin="0 0 0 15"/>

                <!-- PRECIO -->
                <TextBlock Text="Precio por noche ($)" 
                       Foreground="{StaticResource plainTextColor2}" />
                <TextBlock Text="{Binding PrecioNoche}"
                       Foreground="White"
                       FontSize="16"
                       Margin="0 0 0 15"/>

                <!-- BOTONES -->
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 20 0 0">

                    <Button Content="Cancelar"
                        Width="120"
                        Margin="0 0 10 0"
                        Command="{Binding CancelarCommand}"
                        Style="{StaticResource KumaButton}"/>

                    <Button Content="Confirmar Check-In"
                        Width="160"
                        Command="{Binding ConfirmarCheckInCommand}"
                        Style="{StaticResource KumaButton}" />
                </StackPanel>

            </StackPanel>
        </Border>
    </ScrollViewer>

</UserControl>