<UserControl x:Class="Gestión_Hotelera.View.NuevaReservaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Border Background="#162447"
                Padding="30"
                CornerRadius="12"
                BorderBrush="#25324A"
                BorderThickness="1">

            <StackPanel Orientation="Vertical">

                <TextBlock Text="Nueva Reservación"
                           FontSize="24"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,0,25"/>

                <!-- CLIENTE -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Cliente"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Clientes}"
                              DisplayMemberPath="Nombre"
                              SelectedItem="{Binding ClienteSeleccionado}"
                              Width="300"
                              />
                </Grid>

                <!-- HOTEL -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Hotel"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Hoteles}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding HotelSeleccionado}"
                              Width="300"
                              />
                </Grid>

                <!-- HABITACIÓN -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Habitación"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Habitaciones}"
                              DisplayMemberPath="NumeroHabitacion"
                              SelectedItem="{Binding HabitacionSeleccionada}"
                              Width="200"
                              />
                </Grid>

                <!-- FECHAS -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Entrada" Foreground="#C9D1E0" VerticalAlignment="Center"/>
                    <DatePicker Grid.Column="1"
                                SelectedDate="{Binding FechaEntrada}"
                                />

                    <TextBlock Grid.Column="2" Text="Salida" 
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <DatePicker Grid.Column="3"
                                SelectedDate="{Binding FechaSalida}"
                                />
                </Grid>


                <!-- PERSONAS -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Personas"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Width="120"
                             Text="{Binding NumPersonas}"
                             Style="{StaticResource DarkInputStyle}"/>
                </Grid>

                <!-- PRECIO -->
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Precio Total"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Width="160"
                             Text="{Binding PrecioTotal}"
                             Style="{StaticResource DarkInputStyle}"/>
                </Grid>

                <!-- BOTÓN -->
                <Button Content="Guardar Reservación"
                        Width="240"
                        Height="45"
                        HorizontalAlignment="Right"
                        Command="{Binding CrearReservaCommand}"
                        Style="{StaticResource KumaButton}"/>

            </StackPanel>

        </Border>

    </ScrollViewer>
</UserControl>
