<UserControl x:Class="Gestión_Hotelera.View.DashBoardCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             xmlns:viewModel="clr-namespace:Gestión_Hotelera.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Height="120" Margin="10">

    <Border Background="{StaticResource panelColor}" CornerRadius="10" Padding="15"
            BorderBrush="{StaticResource plainTextColor1}" BorderThickness="1">

        <StackPanel>
            <TextBlock Text="{Binding Title}" FontSize="14" Foreground="{StaticResource plainTextColor2}"/>
            <TextBlock Text="{Binding Value}" FontSize="30" FontWeight="Bold" Foreground="{StaticResource panelColor}"/>
        </StackPanel>

    </Border>

</UserControl>