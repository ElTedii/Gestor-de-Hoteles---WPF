<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- BOTÓN PRINCIPAL -->
    <Style x:Key="KumaButton" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#553CFF"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="8"
                            Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#6B4FFF"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#4735B8"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <!-- TEXTBOX -->
    <Style x:Key="DarkInputStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#1F2A40"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="BorderBrush" Value="#3C4A63"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- DATEPICKER -->
    <Style x:Key="DarkDatePickerStyle" TargetType="DatePicker">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="#1F2A40"/>
        <Setter Property="BorderBrush" Value="#3C4A63"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="DatePickerTextBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#1F2A40"/>
    </Style>

    <!-- ======================== -->
    <!--  ESTILOS PARA DATAGRID   -->
    <!-- ======================== -->

    <!-- HEADER -->
    <Style x:Key="KumaDataGridHeader" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource panelColor}"/>
        <Setter Property="Foreground" Value="{StaticResource plainTextColor1}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="10,5,5,5"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- FILAS -->
    <Style x:Key="KumaDataGridRow" TargetType="DataGridRow">
        <Setter Property="Background" Value="{StaticResource panelColor}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- CELDAS -->
    <Style x:Key="KumaDataGridCell" TargetType="DataGridCell">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- =======================
     KUMA DATA GRID STYLE
     ======================= -->
    <Style TargetType="DataGrid" x:Key="KumaDataGrid">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="Background" Value="{StaticResource panelColor}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="RowHeight" Value="40"/>
        <Setter Property="ColumnHeaderHeight" Value="40"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource panelOverColor}"/>
        <Setter Property="GridLinesVisibility" Value="None"/>

        <!-- Column Header Style -->
        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource panelColor}"/>
                    <Setter Property="Foreground" Value="{StaticResource plainTextColor1}"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,0,0,0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#222"/>
                </Style>
            </Setter.Value>
        </Setter>

        <!-- Row Style -->
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{StaticResource panelColor}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#222"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#374151"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource panelActiveColor}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =======================
     KUMA DASHBOARD CARD
     ======================= -->
    <Style x:Key="KumaDashboardCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource panelOverColor}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="BorderBrush" Value="#242C3A"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black"
                              BlurRadius="12"
                              ShadowDepth="0"
                              Opacity="0.35"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="KumaCardTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource plainTextColor2}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="KumaCardValue" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>


    <!-- ======================= -->
    <!--      KUMA TAB CONTROL   -->
    <!-- ======================= -->

    <Style TargetType="TabControl" x:Key="KumaTabControl">
        <Setter Property="Background" Value="{StaticResource panelColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- TAB ITEM (pestañas) -->
    <Style TargetType="TabItem" x:Key="KumaTabItem">
        <Setter Property="Foreground" Value="{StaticResource plainTextColor1}"/>
        <Setter Property="Background" Value="{StaticResource panelOverColor}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        Padding="10,5"
                        SnapsToDevicePixels="True">
                        <ContentPresenter 
                        ContentSource="Header"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <!-- Seleccionado -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource panelActiveColor}"/>
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource panelActiveColor}"/>
                            <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                        </Trigger>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#343F55"/>
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <ControlTemplate x:Key="ComboToggleButtonTemplate" TargetType="ToggleButton">
        <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="6"
            Padding="6">
            <Grid>

                <!-- TEXTO DEL ITEM SELECCIONADO -->
                <TextBlock 
                Text="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                VerticalAlignment="Center"
                Foreground="White"
                Margin="4,0,30,0"/>

                <!-- ICONO DE FLECHA -->
                <Path Data="M0 0 L6 6 L12 0"
                  Stroke="White"
                  StrokeThickness="2"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center"
                  Margin="0,0,6,0"/>
            </Grid>
        </Border>

        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#25324A"/>
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="#25324A"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- ====================== -->
    <!--      COMBOBOX          -->
    <!-- ====================== -->

    <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#1F2A40"/>
        <Setter Property="BorderBrush" Value="#3C4A63"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="FontSize" Value="14"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- ***** -->
                        <!-- ITEM SELECCIONADO -->
                        <!-- ***** -->
                        <ContentPresenter
                            Margin="6,0,30,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Content="{Binding SelectedItem, 
                                      RelativeSource={RelativeSource TemplatedParent}}"
                            ContentTemplate="{Binding ItemTemplate, 
                                      RelativeSource={RelativeSource TemplatedParent}}"/>

                        <!-- FLECHA -->
                        <ToggleButton
                            Grid.Column="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="30"
                            Focusable="False"
                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, 
                                RelativeSource={RelativeSource TemplatedParent}}"
                            Background="Transparent"
                            BorderThickness="0">
                            <Path Data="M0 0 L4 4 L8 0"
                                  Stroke="White"
                                  StrokeThickness="2"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </ToggleButton>

                        <!-- LISTA DESPLEGABLE -->
                        <Popup Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               StaysOpen="False">

                            <Border Background="#1F2A40"
                                    CornerRadius="6"
                                    BorderBrush="#3C4A63"
                                    BorderThickness="1"
                                    Padding="4">
                                <ScrollViewer>
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </Popup>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- COMBOBOX ITEMS -->
    <Style TargetType="ComboBoxItem" x:Key="DarkComboBoxItemStyle">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#1F2A40"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="FontSize" Value="14"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#374A69"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
