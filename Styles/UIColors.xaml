<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Background Colors-->
    <Color x:Key="primaryBackColor1">#0F172A</Color>
    <Color x:Key="primaryBackColor2">#1E293B</Color>
    <Color x:Key="secondaryBackColor1">#27344F</Color>
    <Color x:Key="secondaryBackColor2">#2F3B55</Color>

    <!--Window Border Colors-->
    <Color x:Key="winBorderColor1">#5B21B6</Color>
    <!-- Morado profundo -->
    <Color x:Key="winBorderColor2">#9333EA</Color>
    <!-- Acento púrpura vibrante -->
    <Color x:Key="winBorderColor3">#38BDF8</Color>
    <!-- Azul claro profesional -->

    <!--Color Palette-->
    <SolidColorBrush x:Key="color1" Color="#8B5CF6"/>
    <!-- Morado principal -->
    <SolidColorBrush x:Key="color2" Color="#6D28D9"/>
    <!-- Morado oscuro -->
    <SolidColorBrush x:Key="color3" Color="#22D3EE"/>
    <!-- Cian -->
    <SolidColorBrush x:Key="color4" Color="#0EA5E9"/>
    <!-- Azul brillante -->
    <SolidColorBrush x:Key="color5" Color="#10B981"/>
    <!-- Verde esmeralda -->
    <SolidColorBrush x:Key="color6" Color="#14B8A6"/>
    <!-- Verde azulado -->
    <SolidColorBrush x:Key="color7" Color="#C084FC"/>
    <!-- Lavanda suave -->
    <SolidColorBrush x:Key="color8" Color="#7C3AED"/>
    <!-- Púrpura intenso -->
    <SolidColorBrush x:Key="color9" Color="#A855F7"/>
    <!-- Acento púrpura claro -->
    <SolidColorBrush x:Key="color10" Color="#0F766E"/>
    <!-- Verde profundo -->

    <!--Font Colors-->
    <SolidColorBrush x:Key="titleColor1" Color="#F1F5F9"/>
    <!-- Blanco suave -->
    <SolidColorBrush x:Key="titleColor2" Color="#E2E8F0"/>
    <!-- Gris muy claro -->
    <SolidColorBrush x:Key="titleColor3" Color="#CBD5E1"/>
    <!-- Gris medio -->
    <SolidColorBrush x:Key="plainTextColor1" Color="#94A3B8"/>
    <!-- Gris azulado -->
    <SolidColorBrush x:Key="plainTextColor2" Color="#64748B"/>
    <!-- Texto secundario -->
    <SolidColorBrush x:Key="plainTextColor3" Color="#475569"/>
    <!-- Texto tenue -->

    <!--Panel Colors-->
    <SolidColorBrush x:Key="panelColor" Color="#1E293B"/>
    <SolidColorBrush x:Key="panelOverColor" Color="#334155"/>
    <SolidColorBrush x:Key="panelActiveColor" Color="#3B82F6"/>


    <!--Button Colors-->
    <!--TextBox Colors-->
    <!--Etc-->

</ResourceDictionary>