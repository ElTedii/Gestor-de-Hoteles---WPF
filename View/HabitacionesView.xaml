<UserControl x:Class="Gestión_Hotelera.View.HabitacionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d">

    <Border Background="{StaticResource panelColor}" 
            Padding="20" 
            CornerRadius="12">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- TÍTULO -->
            <TextBlock Grid.Row="0"
                       Text="Habitaciones"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource titleColor2}"/>

            <!-- TABS -->
            <TabControl Grid.Row="1"
                        Margin="0,20,0,0"
                        Background="Transparent"
                        BorderThickness="0">

                <!-- TAB HABITACIONES -->
                <TabItem Header="Habitaciones" Background="Transparent">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="5">
                        <local:HabitacionesListaView />
                    </ScrollViewer>
                </TabItem>

                <!-- TAB TIPOS DE HABITACIÓN -->
                <TabItem Header="Tipos de Habitación" Background="Transparent">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="5">
                        <local:TipoHabitacionView />
                    </ScrollViewer>
                </TabItem>

            </TabControl>
        </Grid>

    </Border>
</UserControl>