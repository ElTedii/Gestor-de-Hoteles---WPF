<UserControl x:Class="Gestión_Hotelera.View.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource panelColor}" Padding="20" CornerRadius="12">

        <StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="Clientes"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource titleColor2}"/>

                <Button Content="Nuevo Cliente"
                        Command="{Binding NuevoClienteCommand}"
                        Style="{StaticResource KumaButton}"
                        Margin="20 0 0 0"/>
            </StackPanel>

            <DataGrid ItemsSource="{Binding Clientes}"
                      Style="{StaticResource KumaDataGrid}"
                      AutoGenerateColumns="False">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding NombreCompleto}" Width="200"/>
                    <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="200"/>
                    <DataGridTextColumn Header="RFC" Binding="{Binding RFC}" Width="130"/>
                    <DataGridTextColumn Header="País" Binding="{Binding Pais}" Width="100"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
                    <DataGridTextColumn Header="Ciudad" Binding="{Binding Ciudad}" Width="120"/>
                </DataGrid.Columns>

            </DataGrid>

        </StackPanel>

    </Border>
</UserControl>
