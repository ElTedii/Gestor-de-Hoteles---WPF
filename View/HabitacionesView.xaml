<UserControl x:Class="Gestión_Hotelera.View.HabitacionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="{StaticResource panelColor}"
            CornerRadius="10"
            Padding="15">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- ENCABEZADO -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Habitaciones"
                               Foreground="{StaticResource plainTextColor1}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="5"/>

                    <TextBlock Text="{Binding CurrentDate, StringFormat='  {0:dd/MM/yyyy}'}"
                               Foreground="{StaticResource plainTextColor2}"
                               FontSize="14"
                               Margin="10,4"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Agregar"
                        Command="{Binding AbrirRegistroHabitacionCommand}"
                        Cursor="Hand"
                        FontSize="12"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource panelOverColor}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Height="40">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#836EFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- TABLA -->
            <Border Grid.Row="1"
                    Background="{StaticResource panelColor}"
                    CornerRadius="10"
                    Padding="10">

                <DataGrid ItemsSource="{Binding Habitaciones}"
                          ColumnWidth="*"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          Background="{StaticResource panelColor}"
                          BorderThickness="0"
                          BorderBrush="{StaticResource color4}"
                          RowHeight="38"
                          ColumnHeaderHeight="40"
                          AlternatingRowBackground="{StaticResource panelOverColor}"
                          Margin="0,0,0,0">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource panelColor}"/>
                            <Setter Property="Foreground" Value="{StaticResource plainTextColor1}"/>
                            <Setter Property="Padding" Value="10,0,0,10"/>
                            <Setter Property="FontFamily" Value="Montserrat"/>
                            <Setter Property="FontSize" Value="15"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding HabitacionId}" Width="200"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="150"/>
                        <DataGridTextColumn Header="Capacidad" Binding="{Binding Capacidad}" Width="100"/>
                        <DataGridTextColumn Header="Precio (MXN)" Binding="{Binding Precio}" Width="150"/>
                        <DataGridTextColumn Header="Tipo de Cama" Binding="{Binding TipoCama}" Width="200"/>
                        <DataGridTextColumn Header="Hotel" Binding="{Binding NombreHotel}" Width="200"/>
                        <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" Width="200"/>
                        <!-- EDITAR -->
                        <DataGridTemplateColumn Header="Editar" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✏"
                                        FontSize="16"
                                        Width="40"
                                        Style="{StaticResource KumaButton}"
                                        Command="{Binding DataContext.AbrirEditarReservaCommand, 
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- ELIMINAR -->
                        <DataGridTemplateColumn Header="Eliminar" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑"
                                        FontSize="16"
                                        Width="40"
                                        Background="#D9534F"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Command="{Binding DataContext.EliminarReservaCommand,
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>

            </Border>
        </Grid>

    </Border>
</UserControl>
