<UserControl x:Class="Gestión_Hotelera.View.RegistroClienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource panelColor}" Padding="20" CornerRadius="12">

        <StackPanel Width="450">

            <TextBlock Text="Registrar Cliente"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource titleColor2}"
                       Margin="0 0 0 20"/>

            <TextBlock Text="Nombre completo" Foreground="{StaticResource plainTextColor2}"/>
            <TextBox Style="{StaticResource DarkInputStyle}" 
                     Text="{Binding Cliente.NombreCompleto}"/>

            <TextBlock Text="RFC" Margin="0 10 0 0" Foreground="{StaticResource plainTextColor2}"/>
            <TextBox Style="{StaticResource DarkInputStyle}" 
                     Text="{Binding Cliente.RFC}"/>

            <TextBlock Text="Correo" Margin="0 10 0 0" Foreground="{StaticResource plainTextColor2}"/>
            <TextBox Style="{StaticResource DarkInputStyle}" 
                     Text="{Binding Cliente.Correo}"/>

            <TextBlock Text="Teléfono Casa" Margin="0 10 0 0" Foreground="{StaticResource plainTextColor2}"/>
            <TextBox Style="{StaticResource DarkInputStyle}" 
                     Text="{Binding Cliente.TelCasa}"/>

            <TextBlock Text="Teléfono Celular" Margin="0 10 0 0" Foreground="{StaticResource plainTextColor2}"/>
            <TextBox Style="{StaticResource DarkInputStyle}" 
                     Text="{Binding Cliente.TelCelular}"/>

            <TextBlock Text="País" Margin="0 10 0 0" Foreground="{StaticResource plainTextColor2}"/>
            <TextBox Style="{StaticResource DarkInputStyle}" Text="{Binding Cliente.Pais}"/>

            <TextBlock Text="Estado" Margin="0 10 0 0" Foreground="{StaticResource plainTextColor2}"/>
            <TextBox Style="{StaticResource DarkInputStyle}" Text="{Binding Cliente.Estado}"/>

            <TextBlock Text="Ciudad" Margin="0 10 0 0" Foreground="{StaticResource plainTextColor2}"/>
            <TextBox Style="{StaticResource DarkInputStyle}" Text="{Binding Cliente.Ciudad}"/>

            <Button Content="Guardar"
                    Margin="0 20 0 0"
                    Command="{Binding GuardarCommand}"
                    Style="{StaticResource KumaButton}"/>

        </StackPanel>

    </Border>
</UserControl>
