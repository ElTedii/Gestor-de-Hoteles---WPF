<UserControl x:Class="Gestión_Hotelera.View.CheckOutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource panelColor}"
            Padding="15"
            CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- ENCABEZADO -->
            <Grid Grid.Row="0">
                <TextBlock Text="Check-Out"
                           Foreground="{StaticResource plainTextColor1}"
                           FontFamily="Verdana"
                           FontSize="16"
                           Padding="10"/>
            </Grid>

            <!-- TABLA -->
            <Border Grid.Row="1"
                    Background="{StaticResource panelColor}"
                    CornerRadius="10"
                    Padding="10">

                <DataGrid ColumnWidth="*"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          Background="{StaticResource panelColor}"
                          BorderThickness="0"
                          AlternatingRowBackground="{StaticResource panelOverColor}"
                          Foreground="White"
                          RowHeight="38"
                          ColumnHeaderHeight="40">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource panelColor}"/>
                            <Setter Property="Foreground" Value="{StaticResource plainTextColor1}"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Padding" Value="10"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="200"/>
                        <DataGridTextColumn Header="Hotel" Binding="{Binding Hotel}" Width="200"/>
                        <DataGridTextColumn Header="Habitación" Binding="{Binding Habitacion}" Width="100"/>
                        <DataGridTextColumn Header="Entrada" Binding="{Binding Entrada}" Width="120"/>
                        <DataGridTextColumn Header="Salida Planeada" Binding="{Binding SalidaPlaneada}" Width="140"/>
                        <DataGridTextColumn Header="Cargos" Binding="{Binding TotalCargos}" Width="100"/>

                        <!-- BOTÓN CHECK-OUT -->
                        <DataGridTemplateColumn Header="Check-Out" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Check-Out"
                                            Width="100"
                                            Style="{StaticResource KumaButton}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>

            </Border>

        </Grid>

    </Border>
</UserControl>
