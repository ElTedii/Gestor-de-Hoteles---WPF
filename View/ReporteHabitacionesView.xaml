<UserControl x:Class="Gestión_Hotelera.View.ReporteHabitacionesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource panelColor}" Padding="15" CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- TÍTULO -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Reporte de Habitaciones"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="20"
                           FontWeight="Bold"/>
            </StackPanel>

            <!-- FILTROS -->
            <StackPanel Orientation="Horizontal" Margin="0,40,0,10">
                <ComboBox Width="200" Margin="0,0,20,0"
                          />

                <ComboBox Width="200"
                          />
            </StackPanel>

            <!-- TABLA -->
            <Border Grid.Row="1" Background="{StaticResource panelColor}"
                    CornerRadius="10" Padding="10">

                <DataGrid AutoGenerateColumns="False"
                          ColumnWidth="*"
                          Background="{StaticResource panelColor}"
                          Foreground="White"
                          RowHeight="38"
                          AlternatingRowBackground="{StaticResource panelOverColor}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Habitación" Width="120"/>
                        <DataGridTextColumn Header="Tipo" Width="180"/>
                        <DataGridTextColumn Header="Estado" Width="130"/>
                        <DataGridTextColumn Header="Hotel" Width="200"/>
                    </DataGrid.Columns>

                </DataGrid>

            </Border>

        </Grid>

    </Border>
</UserControl>
