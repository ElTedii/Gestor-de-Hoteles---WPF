<UserControl x:Class="Gestión_Hotelera.View.HotelsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="{StaticResource panelColor}"
            Padding="20"
            CornerRadius="12">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Lista -->
                <ColumnDefinition Width="3*"/>
                <!-- Formulario -->
            </Grid.ColumnDefinitions>

            <!-- ===================== -->
            <!--   COLUMNA IZQUIERDA  -->
            <!-- ===================== -->
            <Border Grid.Column="0"
                    Background="{StaticResource panelColor}"
                    CornerRadius="10"
                    Padding="10"
                    BorderBrush="{StaticResource panelOverColor}"
                    BorderThickness="1"
                    Margin="0,0,10,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Título + filtro -->
                        <RowDefinition Height="*"/>
                        <!-- Grid -->
                        <RowDefinition Height="Auto"/>
                        <!-- Info -->
                    </Grid.RowDefinitions>

                    <!-- TÍTULO + BUSCADOR -->
                    <StackPanel Grid.Row="0"
                                Orientation="Vertical"
                                Margin="0,0,0,10">
                        <TextBlock Text="Hoteles"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource titleColor2}"/>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBox Width="200"
                                     Style="{StaticResource DarkInputStyle}"
                                     Text="{Binding FiltroTexto, UpdateSourceTrigger=PropertyChanged}"
/>
                        </StackPanel>
                    </StackPanel>

                    <!-- LISTA DE HOTELES -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Hoteles}"
                              SelectedItem="{Binding HotelSeleccionado}"
                              AutoGenerateColumns="False"
                              Style="{StaticResource KumaDataGrid}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre"
                                                Binding="{Binding Nombre}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Ciudad"
                                                Binding="{Binding Ciudad}"
                                                Width="140"/>
                            <DataGridTextColumn Header="Estado"
                                                Binding="{Binding Estado}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Pisos"
                                                Binding="{Binding NumPisos}"
                                                Width="70"/>
                        </DataGrid.Columns>

                    </DataGrid>

                    <!-- INFO -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="0,8,0,0">
                        <TextBlock Text="Registros:"
                                   Foreground="{StaticResource plainTextColor2}"
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Hoteles.Count}"
                                   Foreground="{StaticResource titleColor2}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===================== -->
            <!--   COLUMNA DERECHA    -->
            <!-- ===================== -->
            <Border Grid.Column="1"
                    Background="{StaticResource panelOverColor}"
                    CornerRadius="10"
                    Padding="15"
                    BorderBrush="{StaticResource panelOverColor}"
                    BorderThickness="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Título + botones -->
                        <RowDefinition Height="*"/>
                        <!-- Formulario -->
                    </Grid.RowDefinitions>

                    <!-- TÍTULO + BOTONES -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Detalle de hotel"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource titleColor2}"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">

                            <Button Content="Nuevo"
                                    Command="{Binding NuevoCommand}"
                                    Style="{StaticResource KumaButton}"
                                    Width="90"
                                    Margin="0,0,8,0"/>

                            <Button Content="Guardar"
                                    Command="{Binding GuardarCommand}"
                                    Style="{StaticResource KumaButton}"
                                    Width="100"
                                    Margin="0,0,8,0"/>

                            <Button Content="Eliminar"
                                    Command="{Binding EliminarCommand}"
                                    Style="{StaticResource KumaButton}"
                                    Width="100"
                                    Margin="0,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- FORMULARIO -->
                    <Grid Grid.Row="1"
                          Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- COLUMNA IZQUIERDA -->
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,10,0">

                            <TextBlock Text="Nombre"
                                       Foreground="{StaticResource plainTextColor1}"/>
                            <TextBox Text="{Binding Nombre}"
                                     Style="{StaticResource DarkInputStyle}"
                                     Margin="0,3,0,10"/>

                            <TextBlock Text="País"
                                       Foreground="{StaticResource plainTextColor1}"/>
                            <TextBox Text="{Binding Pais}"
                                     Style="{StaticResource DarkInputStyle}"
                                     Margin="0,3,0,10"/>

                            <TextBlock Text="Estado"
                                       Foreground="{StaticResource plainTextColor1}"/>
                            <TextBox Text="{Binding Estado}"
                                     Style="{StaticResource DarkInputStyle}"
                                     Margin="0,3,0,10"/>

                            <TextBlock Text="Ciudad"
                                       Foreground="{StaticResource plainTextColor1}"/>
                            <TextBox Text="{Binding Ciudad}"
                                     Style="{StaticResource DarkInputStyle}"
                                     Margin="0,3,0,10"/>

                            <TextBlock Text="Domicilio"
                                       Foreground="{StaticResource plainTextColor1}"/>
                            <TextBox Text="{Binding Domicilio}"
                                     Style="{StaticResource DarkInputStyle}"
                                     Margin="0,3,0,10"
                                     TextWrapping="Wrap"
                                     Height="50"/>
                        </StackPanel>

                        <!-- COLUMNA DERECHA -->
                        <StackPanel Grid.Column="1"
                                    Margin="10,0,0,0">

                            <TextBlock Text="Número de pisos"
                                       Foreground="{StaticResource plainTextColor1}"/>
                            <TextBox Text="{Binding NumPisos}"
                                     Style="{StaticResource DarkInputStyle}"
                                     Margin="0,3,0,10"/>

                            <TextBlock Text="Zona turística"
                                       Foreground="{StaticResource plainTextColor1}"/>
                            <TextBox Text="{Binding ZonaTuristica}"
                                     Style="{StaticResource DarkInputStyle}"
                                     Margin="0,3,0,10"/>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5,0,10">
                                <CheckBox IsChecked="{Binding FrentePlaya}"
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="Frente a playa"
                                           Margin="6,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource plainTextColor1}"/>
                            </StackPanel>

                            <TextBlock Text="Piscinas"
                                       Foreground="{StaticResource plainTextColor1}"/>
                            <TextBox Text="{Binding NumPiscinas}"
                                     Style="{StaticResource DarkInputStyle}"
                                     Margin="0,3,0,10"/>

                            <TextBlock Text="Salones para eventos"
                                       Foreground="{StaticResource plainTextColor1}"/>
                            <TextBox Text="{Binding SalonesEventos}"
                                     Style="{StaticResource DarkInputStyle}"
                                     Margin="0,3,0,10"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Border>
</UserControl>