<UserControl x:Class="Gestión_Hotelera.View.RegistroHabitacionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border Background="{StaticResource panelColor}"
            Padding="30"
            CornerRadius="15">

        <StackPanel>

            <TextBlock Text="Registrar Habitación"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource titleColor1}"
                       Margin="0,0,0,20"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- HOTEL -->
                <TextBlock Grid.Row="0" Text="Hotel"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource plainTextColor1}"/>

                <ComboBox Grid.Row="0" Grid.Column="1"
                          ItemsSource="{Binding Hoteles}"
                          DisplayMemberPath="Nombre"
                          SelectedValuePath="HotelId"
                          SelectedValue="{Binding HotelSeleccionado}"
                          Style="{StaticResource DarkComboBoxStyle}"
                          Width="250"/>

                <!-- TIPO -->
                <TextBlock Grid.Row="1" Text="Tipo de habitación"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource plainTextColor1}"
                           Margin="0,15,0,0"/>

                <ComboBox Grid.Row="1" Grid.Column="1"
                          ItemsSource="{Binding TiposHab}"
                          DisplayMemberPath="NombreTipo"
                          SelectedValuePath="TipoId"
                          SelectedValue="{Binding TipoSeleccionado}"
                          Style="{StaticResource DarkComboBoxStyle}"
                          Width="250"
                          Margin="0,15,0,0"/>

                <!-- NUMERO -->
                <TextBlock Grid.Row="2" Text="Número habitación"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource plainTextColor1}"
                           Margin="0,15,0,0"/>

                <TextBox Grid.Row="2" Grid.Column="1"
                         Style="{StaticResource DarkInputStyle}"
                         Text="{Binding NumeroHabitacion}"
                         Width="250"
                         Margin="0,15,0,0"/>

                <!-- PISO -->
                <TextBlock Grid.Row="3" Text="Piso"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource plainTextColor1}"
                           Margin="0,15,0,0"/>

                <TextBox Grid.Row="3" Grid.Column="1"
                         Style="{StaticResource DarkInputStyle}"
                         Text="{Binding Piso}"
                         Width="250"
                         Margin="0,15,0,0"/>
            </Grid>

            <!-- BOTÓN -->
            <Button Content="Registrar Habitación"
                    Style="{StaticResource KumaButton}"
                    Command="{Binding GuardarCommand}"
                    Width="220"
                    Height="45"
                    Margin="0,30,0,0"
                    HorizontalAlignment="Center"/>

        </StackPanel>

    </Border>

</UserControl>