<UserControl x:Class="Gestión_Hotelera.View.RealizarCheckOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{StaticResource panelColor}"
            Padding="20"
            CornerRadius="12">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TÍTULO -->
            <TextBlock Grid.Row="0"
                       Text="Realizar Check-Out"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource titleColor2}"/>

            <!-- CONTENIDO -->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Datos de la estancia -->
                <StackPanel Grid.Column="0"
                            Margin="0,0,20,0">

                    <TextBlock Text="Datos de la estancia"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource plainTextColor1}"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Habitación:" Width="120"
                                   Foreground="{StaticResource plainTextColor2}"/>
                        <TextBlock Text="{Binding Estancia.NumeroHabitacion}"
                                   Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Entrada:" Width="120"
                                   Foreground="{StaticResource plainTextColor2}"/>
                        <TextBlock Text="{Binding Estancia.FechaEntrada, StringFormat=dd/MM/yyyy}"
                                   Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Salida:" Width="120"
                                   Foreground="{StaticResource plainTextColor2}"/>
                        <TextBlock Text="{Binding Estancia.FechaSalida, StringFormat=dd/MM/yyyy}"
                                   Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Precio noche:" Width="120"
                                   Foreground="{StaticResource plainTextColor2}"/>
                        <TextBlock Text="{Binding Estancia.PrecioNoche, StringFormat=C}"
                                   Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Anticipo:" Width="120"
                                   Foreground="{StaticResource plainTextColor2}"/>
                        <TextBlock Text="{Binding Estancia.Anticipo, StringFormat=C}"
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <!-- Cálculos y acciones -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Cargos y totales"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource plainTextColor1}"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Monto servicios"
                               Foreground="{StaticResource plainTextColor2}"/>
                    <TextBox Text="{Binding MontoServicios}"
                             Style="{StaticResource DarkInputStyle}"
                             Margin="0,0,0,8"/>

                    <TextBlock Text="Descuento"
                               Foreground="{StaticResource plainTextColor2}"/>
                    <TextBox Text="{Binding Descuento}"
                             Style="{StaticResource DarkInputStyle}"
                             Margin="0,0,0,8"/>

                    <TextBlock Text="Total estimado"
                               Foreground="{StaticResource plainTextColor2}"
                               Margin="0,10,0,2"/>
                    <TextBlock Text="{Binding TotalCalculado, StringFormat=C}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource titleColor2}"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Content="Cancelar"
                                Width="110"
                                Margin="0,0,10,0"
                                Command="{Binding CancelarCommand}"/>
                        <Button Content="Confirmar Check-Out"
                                Width="170"
                                Style="{StaticResource KumaButton}"
                                Command="{Binding ConfirmarCommand}"/>
                    </StackPanel>
                </StackPanel>

            </Grid>
        </Grid>
    </Border>

</UserControl>