<UserControl x:Class="Gestión_Hotelera.View.ReservasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource panelColor}"
            Padding="20"
            CornerRadius="12">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- ENCABEZADO -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Reservaciones"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <!-- BOTÓN NUEVA RESERVA -->
                <Button Grid.Column="1"
                        Content="Nueva Reserva"
                        FontSize="14"
                        Style="{StaticResource KumaButton}"
                        Command="{Binding AbrirNuevaReservaCommand}"/>
            </Grid>

            <!-- TABLA -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Reservas}"
                      AutoGenerateColumns="False"
                      Background="{StaticResource panelColor}"
                      AlternatingRowBackground="{StaticResource panelOverColor}"
                      Foreground="White"
                      RowHeight="40"
                      ColumnHeaderHeight="40"
                      BorderBrush="{StaticResource panelOverColor}"
                      BorderThickness="0"
                      Margin="0,20,0,0">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource panelColor}"/>
                        <Setter Property="Foreground" Value="{StaticResource plainTextColor1}"/>
                        <Setter Property="Padding" Value="10,0,0,10"/>
                        <Setter Property="FontFamily" Value="Montserrat"/>
                        <Setter Property="FontSize" Value="15"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Cliente"
                                        Binding="{Binding ClienteNombre}" 
                                        Width="160"/>

                    <DataGridTextColumn Header="Hotel"
                                        Binding="{Binding HotelNombre}" 
                                        Width="160"/>

                    <DataGridTextColumn Header="Habitación"
                                        Binding="{Binding NumeroHabitacion}" 
                                        Width="100"/>

                    <DataGridTextColumn Header="Entrada"
                                        Binding="{Binding FechaEntrada, StringFormat=dd/MM/yyyy}" 
                                        Width="110"/>

                    <DataGridTextColumn Header="Salida"
                                        Binding="{Binding FechaSalida, StringFormat=dd/MM/yyyy}" 
                                        Width="110"/>

                    <DataGridTextColumn Header="Personas"
                                        Binding="{Binding NumPersonas}" 
                                        Width="80"/>

                    <DataGridTextColumn Header="Total"
                                        Binding="{Binding PrecioTotal, StringFormat=C}" 
                                        Width="100"/>

                    <!-- EDITAR -->
                    <DataGridTemplateColumn Header="Editar" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✏"
                                        FontSize="16"
                                        Width="40"
                                        Style="{StaticResource KumaButton}"
                                        Command="{Binding DataContext.AbrirEditarReservaCommand, 
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- ELIMINAR -->
                    <DataGridTemplateColumn Header="Eliminar" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🗑"
                                        FontSize="16"
                                        Width="40"
                                        Background="#D9534F"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Command="{Binding DataContext.EliminarReservaCommand,
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>

        </Grid>

    </Border>
</UserControl>
