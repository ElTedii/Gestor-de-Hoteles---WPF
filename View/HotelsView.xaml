<UserControl x:Class="Gestión_Hotelera.View.HotelsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border Grid.Row="1"
                Background="{StaticResource panelColor}"
                CornerRadius="10" 
                Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <!-- Encabezado -->
                <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Grid.Row="0">
                    <TextBlock Text="Hoteles"
                           Background="Transparent"
                           Foreground="{StaticResource plainTextColor1}"
                           Padding="15"
                           FontFamily="Verdana"
                           FontSize="15"
                           VerticalAlignment="Top"/>
                    <TextBlock Text="{Binding CurrentDate, StringFormat='  {0:dd/MM/yyyy}'}"
                           FontSize="16" 
                           Margin="20,5,0,0"
                           FontFamily="Verdana"
                           Foreground="{StaticResource plainTextColor2}"/>
                </StackPanel>
                <Button Grid.Column="1"
                        Content="Agregar"
                        FontSize="12"
                        FontFamily="Verdana"
                        Cursor="Hand"
                        BorderThickness="0"
                        Foreground="White"
                        VerticalAlignment="Top"
                        Command="{Binding AbrirRegistroHotelCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource panelOverColor}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Height="40"
                                                CornerRadius="15"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#836EFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>

            <Border Grid.Row="1"
                Background="{StaticResource panelColor}"
                CornerRadius="10" 
                Padding="10">

                <DataGrid ItemsSource="{Binding Hoteles}"
                          ColumnWidth="*"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          Background="{StaticResource panelColor}"
                          BorderThickness="0"
                          BorderBrush="{StaticResource color4}"
                          RowHeight="38"
                          ColumnHeaderHeight="40"
                          AlternatingRowBackground="{StaticResource panelOverColor}"
                          Margin="0,0,0,0">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource panelColor}"/>
                            <Setter Property="Foreground" Value="{StaticResource plainTextColor1}"/>
                            <Setter Property="Padding" Value="10,0,0,10"/>
                            <Setter Property="FontFamily" Value="Montserrat"/>
                            <Setter Property="FontSize" Value="15"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding HotelId}" Width="250"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Ciudad" Binding="{Binding City}" Width="150"/>
                        <DataGridTextColumn Header="Dirección" Binding="{Binding Address}" Width="250"/>
                        <DataGridTextColumn Header="Pisos" Binding="{Binding NumFloors}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Border>

        </Grid>
    </Border>
</UserControl>
