<UserControl x:Class="Gestión_Hotelera.View.RealizarCheckOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Border Background="{StaticResource panelColor}"
                Padding="30"
                CornerRadius="15">

            <StackPanel Orientation="Vertical">

                <TextBlock Text="Realizar Check-Out"
                           FontSize="22"
                           Foreground="White"
                           Padding="5"
                           FontWeight="Bold"/>

                <!-- DATOS GENERALES -->
                <Border Background="{StaticResource panelOverColor}"
                        Padding="15"
                        CornerRadius="10"
                        Margin="0,20,0,20">
                    <StackPanel>

                        <TextBlock Text="Datos de la Estancia"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <!-- CLIENTE -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Cliente" Foreground="#C9D1E0"/>
                            <TextBox Grid.Column="1"
                                     Width="300"
                                     Text="—"
                                     IsReadOnly="True"
                                     Style="{StaticResource DarkInputStyle}"/>
                        </Grid>

                        <!-- HABITACION -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Habitación" Foreground="#C9D1E0"/>
                            <TextBox Grid.Column="1"
                                     Width="150"
                                     Text="—"
                                     IsReadOnly="True"
                                     Style="{StaticResource DarkInputStyle}"/>
                        </Grid>

                        <!-- FECHAS -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Entrada" Foreground="#C9D1E0"/>
                            <TextBox Grid.Column="1"
                                     Text="—"
                                     IsReadOnly="True"
                                     Style="{StaticResource DarkInputStyle}"/>

                            <TextBlock Grid.Column="2" Text="Salida prevista" Foreground="#C9D1E0"/>
                            <TextBox Grid.Column="3"
                                     Text="—"
                                     IsReadOnly="True"
                                     Style="{StaticResource DarkInputStyle}"/>
                        </Grid>

                    </StackPanel>
                </Border>

                <!-- CARGOS EXTRAS -->
                <TextBlock Text="Cargos adicionales"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,10,0,10"/>

                <!-- MINIBAR -->
                <Grid Margin="0,5,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Minibar" Foreground="#C9D1E0"/>
                    <TextBox Grid.Column="1"
                             Width="130"
                             Style="{StaticResource DarkInputStyle}"
                             Text="0"/>
                </Grid>

                <!-- LIMPIEZA EXTRA -->
                <Grid Margin="0,5,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Limpieza extra" Foreground="#C9D1E0"/>
                    <TextBox Grid.Column="1"
                             Width="130"
                             Style="{StaticResource DarkInputStyle}"
                             Text="0"/>
                </Grid>

                <!-- DAÑOS -->
                <Grid Margin="0,5,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Daños en la habitación" Foreground="#C9D1E0"/>
                    <TextBox Grid.Column="1"
                             Width="130"
                             Style="{StaticResource DarkInputStyle}"
                             Text="0"/>
                </Grid>

                <!-- DEPÓSITO -->
                <Grid Margin="0,5,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Depósito entregado" Foreground="#C9D1E0"/>
                    <TextBox Grid.Column="1"
                             Width="130"
                             Style="{StaticResource DarkInputStyle}"
                             Text="—"
                             IsReadOnly="True"/>
                </Grid>

                <!-- TOTAL -->
                <Grid Margin="20,10,0,20">
                    <TextBlock Text="Total Final: $0"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"/>
                </Grid>

                <!-- BOTÓN -->
                <Button Content="Completar Check-Out"
                        Width="220"
                        Height="45"
                        HorizontalAlignment="Right"
                        Style="{StaticResource KumaButton}"/>

            </StackPanel>

        </Border>

    </ScrollViewer>
</UserControl>
