<UserControl x:Class="Gestión_Hotelera.View.ReporteEstanciasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource panelColor}" Padding="15" CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- ENCABEZADO -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Reporte de Estancias"
                           Foreground="{StaticResource plainTextColor1}"
                           FontSize="20"
                           FontWeight="Bold"/>

                <Button Content="Exportar PDF"
                        Width="130"
                        Margin="20,0,0,0"
                        Style="{StaticResource KumaButton}"/>
            </StackPanel>

            <!-- FILTROS -->
            <StackPanel Orientation="Horizontal" Margin="0,40,0,10">
                <ComboBox Width="180" Margin="0,0,20,0"
                          />

                <TextBox Width="180" Margin="0,0,20,0"
                         Style="{StaticResource DarkInputStyle}"
                         />

                <DatePicker Width="160"
                           />

                <DatePicker Width="160" Margin="20,0,0,0"
                            />
            </StackPanel>

            <!-- TABLA -->
            <Border Grid.Row="1"
                    Background="{StaticResource panelColor}"
                    CornerRadius="10"
                    Padding="10">

                <DataGrid AutoGenerateColumns="False"
                          ColumnWidth="*"
                          RowHeight="38"
                          AlternatingRowBackground="{StaticResource panelOverColor}"
                          Background="{StaticResource panelColor}"
                          Foreground="White">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cliente" Width="180"/>
                        <DataGridTextColumn Header="Hotel" Width="180"/>
                        <DataGridTextColumn Header="Habitación" Width="110"/>
                        <DataGridTextColumn Header="Entrada Real" Width="150"/>
                        <DataGridTextColumn Header="Salida Real" Width="150"/>
                        <DataGridTextColumn Header="Total Cargos" Width="150"/>
                    </DataGrid.Columns>

                </DataGrid>

            </Border>

        </Grid>

    </Border>
</UserControl>
