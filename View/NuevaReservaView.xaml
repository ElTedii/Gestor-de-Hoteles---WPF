<UserControl x:Class="Gestión_Hotelera.View.NuevaReservaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="#162447"
                Padding="35"
                CornerRadius="12"
                BorderBrush="#25324A"
                BorderThickness="1">

            <StackPanel Orientation="Vertical" VerticalAlignment="Top">

                <!-- TÍTULO -->
                <TextBlock Text="Nueva Reservación"
                           FontSize="26"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0 0 0 30"/>

                <Separator Margin="0 0 0 20" Background="#25324A"/>

                <!-- CLIENTE -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Cliente"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Clientes}"
                              SelectedItem="{Binding ClienteSeleccionado}"
                              Width="260"
                              Height="32"
                              Style="{StaticResource DarkComboBoxStyle}"
                              VerticalContentAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NombreCompleto}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="4,0"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!-- HOTEL -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Hotel"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Hoteles}"
                              SelectedItem="{Binding HotelSeleccionado}"
                              Width="260"
                              Height="32"
                              Style="{StaticResource DarkComboBoxStyle}"
                              VerticalContentAlignment="Center"
                              DisplayMemberPath="Nombre"/>
                </Grid>

                <!-- HABITACIÓN -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Habitación disponible"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Habitaciones}"
                              SelectedItem="{Binding HabitacionSeleccionada}"
                              Width="260"
                              Height="32"
                              Style="{StaticResource DarkComboBoxStyle}"
                              VerticalContentAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NumeroHabitacion}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="4,0"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <Separator Margin="0 10 0 20" Background="#25324A"/>

                <!-- FECHAS -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Fecha Entrada"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <DatePicker Grid.Column="1"
                                SelectedDate="{Binding FechaEntrada}"
                                Style="{StaticResource DarkDatePickerStyle}"/>

                    <TextBlock Grid.Column="2"
                               Text="Fecha Salida"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <DatePicker Grid.Column="3"
                                SelectedDate="{Binding FechaSalida}"
                                Style="{StaticResource DarkDatePickerStyle}"/>
                </Grid>

                <!-- PERSONAS -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Personas"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Adultos:"
                                   Foreground="#C9D1E0"
                                   Margin="0 0 10 0"/>
                        <TextBox Width="60"
                                 Text="{Binding Adultos, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource DarkInputStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Menores:"
                                   Foreground="#C9D1E0"
                                   Margin="0 0 10 0"/>
                        <TextBox Width="60"
                                 Text="{Binding Menores, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource DarkInputStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- ANTICIPO -->
                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Anticipo"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Width="180"
                             Text="{Binding Anticipo, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource DarkInputStyle}"/>
                </Grid>

                <!-- PRECIO -->
                <Grid Margin="0 0 0 30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Precio Total"
                               Foreground="#C9D1E0"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                             Width="180"
                             Text="{Binding PrecioTotal}"
                             IsReadOnly="True"
                             Style="{StaticResource DarkInputStyle}"/>
                </Grid>

                <!-- GUARDAR -->
                <Button Content="Guardar Reservación"
                        Width="260"
                        Height="48"
                        HorizontalAlignment="Right"
                        Command="{Binding CrearReservaCommand}"
                        Style="{StaticResource KumaButton}"/>

            </StackPanel>

        </Border>

    </ScrollViewer>

</UserControl>