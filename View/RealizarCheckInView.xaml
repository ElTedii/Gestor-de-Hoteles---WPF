<UserControl x:Class="Gestión_Hotelera.View.RealizarCheckInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestión_Hotelera.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Border Background="{StaticResource panelColor}"
                Padding="30"
                CornerRadius="15">

            <StackPanel Orientation="Vertical">

                <TextBlock Text="Realizar Check-In"
                           FontSize="22"
                           Foreground="White"
                           Padding="5"
                           FontWeight="Bold"/>

                <!-- ====== DATOS DE RESERVA (SOLO VISUALES) ====== -->
                <Border Background="{StaticResource panelOverColor}"
                        Padding="15"
                        CornerRadius="10"
                        Margin="0,20,0,20">
                    <StackPanel>

                        <TextBlock Text="Datos de la Reservación"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <!-- CLIENTE -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Cliente"
                                       Foreground="#C9D1E0"/>

                            <TextBox Grid.Column="1"
                                     Width="300"
                                     Style="{StaticResource DarkInputStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>

                        <!-- HABITACIÓN -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Habitación" Foreground="#C9D1E0"/>
                            <TextBox Grid.Column="1"
                                     Width="130"
                                     Style="{StaticResource DarkInputStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>

                        <!-- FECHAS -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Entrada" Foreground="#C9D1E0"/>
                            <TextBox Grid.Column="1"
                                     Style="{StaticResource DarkInputStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>

                            <TextBlock Grid.Column="2"
                                       Text="Salida"
                                       Foreground="#C9D1E0"/>

                            <TextBox Grid.Column="3"
                                     Style="{StaticResource DarkInputStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>

                    </StackPanel>
                </Border>

                <!-- ========== DATOS DEL CHECK IN ========= -->
                <TextBlock Text="Datos del Check-In"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <!-- HORA -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Hora de entrada" Foreground="#C9D1E0"/>
                    <TextBox Grid.Column="1"
                             Width="200"
                             Style="{StaticResource DarkInputStyle}"
                             Text=""/>
                </Grid>

                <!-- DEPÓSITO -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Depósito" Foreground="#C9D1E0"/>
                    <TextBox Grid.Column="1"
                             Width="130"
                             Style="{StaticResource DarkInputStyle}"/>
                </Grid>

                <!-- MÉTODO PAGO -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Método de pago" Foreground="#C9D1E0"/>
                    <ComboBox Grid.Column="1"
                              Width="220"
                              Style="{StaticResource DarkInputStyle}">
                        <ComboBoxItem Content="Efectivo"/>
                        <ComboBoxItem Content="Tarjeta"/>
                        <ComboBoxItem Content="Transferencia"/>
                    </ComboBox>
                </Grid>

                <!-- NOTAS -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Notas" Foreground="#C9D1E0"/>
                    <TextBox Grid.Column="1"
                             Width="350"
                             Height="70"
                             Style="{StaticResource DarkInputStyle}"
                             TextWrapping="Wrap"/>
                </Grid>

                <!-- BOTÓN -->
                <Button Content="Completar Check-In"
                        Width="200"
                        Height="45"
                        HorizontalAlignment="Right"
                        Style="{StaticResource KumaButton}"/>

            </StackPanel>

        </Border>

    </ScrollViewer>
</UserControl>
