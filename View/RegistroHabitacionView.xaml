<UserControl x:Class="Gestión_Hotelera.View.RegistroHabitacionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="{StaticResource panelColor}"
                Padding="20"
                CornerRadius="12">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TÍTULO -->
                <TextBlock Text="Registro de Habitaciones"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="{StaticResource titleColor2}"
                           Margin="0,0,0,15"/>

                <!-- FORMULARIO -->
                <Border Grid.Row="1"
                        Background="{StaticResource panelOverColor}"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,15">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- FILA SUPERIOR -->
                        <Grid Grid.Row="0"
                              Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- HOTEL -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Hotel" Foreground="{StaticResource plainTextColor1}"/>
                                <ComboBox ItemsSource="{Binding Hoteles}"
                                          DisplayMemberPath="Nombre"
                                          SelectedItem="{Binding HotelSeleccionado}"
                                          Style="{StaticResource DarkComboBoxStyle}"/>
                            </StackPanel>

                            <!-- TIPO -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Tipo de habitación" Foreground="{StaticResource plainTextColor1}"/>
                                <ComboBox ItemsSource="{Binding TiposHabitacion}"
                                          DisplayMemberPath="NombreTipo"
                                          SelectedItem="{Binding TipoSeleccionado}"
                                          Style="{StaticResource DarkComboBoxStyle}"/>
                            </StackPanel>

                            <!-- BOTONES -->
                            <Button Grid.Column="2" Content="Nuevo" Style="{StaticResource KumaButton}"
                                    Command="{Binding NuevoCommand}" Margin="5,18,0,0"/>

                            <Button Grid.Column="3" Content="Guardar" Style="{StaticResource KumaButton}"
                                    Command="{Binding GuardarCommand}" Margin="5,18,0,0"/>

                            <Button Grid.Column="4" Content="Refrescar" Style="{StaticResource KumaButton}"
                                    Command="{Binding RefrescarCommand}" Margin="5,18,0,0"
                                    HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- CAMPOS -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- IZQUIERDA -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">

                                <TextBlock Text="Número de habitación"
                                           Foreground="{StaticResource plainTextColor1}"/>
                                <TextBox Text="{Binding NumeroHabitacion}"
                                         Style="{StaticResource DarkInputStyle}"/>

                                <TextBlock Text="Piso" Foreground="{StaticResource plainTextColor1}"/>
                                <ComboBox ItemsSource="{Binding Pisos}"
                                          SelectedItem="{Binding Piso}"
                                          Style="{StaticResource DarkComboBoxStyle}"/>
                            </StackPanel>

                            <!-- DERECHA -->
                            <StackPanel Grid.Column="1" Margin="15,0,0,0">

                                <TextBlock Text="Estado" Foreground="{StaticResource plainTextColor1}"/>
                                <ComboBox SelectedItem="{Binding Estado}"
                                          Style="{StaticResource DarkComboBoxStyle}"
                                          Margin="0,3,0,10"
                                          Width="200">

                                    <sys:String>DISPONIBLE</sys:String>
                                    <sys:String>OCUPADA</sys:String>
                                    <sys:String>MANTENIMIENTO</sys:String>

                                </ComboBox>

                                <TextBlock Text="Precio por noche"
                                           Foreground="{StaticResource plainTextColor1}"
                                           Margin="0,10,0,0"/>
                                <TextBox Text="{Binding PrecioNoche}"
                                         IsReadOnly="True"
                                         Style="{StaticResource DarkInputStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- TABLA -->
                <Border Grid.Row="2"
                        Background="{StaticResource panelColor}"
                        CornerRadius="10"
                        Padding="10"
                        BorderBrush="{StaticResource panelOverColor}"
                        BorderThickness="1">

                    <StackPanel>
                        <TextBlock Text="Habitaciones Registradas"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource titleColor1}"/>

                        <DataGrid ItemsSource="{Binding HabitacionesRegistradas}"
                                  AutoGenerateColumns="False"
                                  Style="{StaticResource KumaDataGrid}">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Número" Binding="{Binding NumeroHabitacion}"/>
                                <DataGridTextColumn Header="Piso" Binding="{Binding Piso}"/>
                                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}"/>
                                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoNombre}"/>
                            </DataGrid.Columns>

                        </DataGrid>
                    </StackPanel>
                </Border>

            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>